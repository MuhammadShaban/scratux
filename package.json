{
  "name": "scratux",
  "version": "1.0.0",
  "description": "A free programming language where you can create your own interactive stories, games, and animations",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "build": {
    "productName": "scratux",
    "appId": "org.joancipria.scratux",
    "directories": {
      "output": "build"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "icon": "icons",
      "category": "development",
      "target": [
        "AppImage",
        "deb",
        "pacman",
        "snap"
      ]
    }
  },
  "license": "BSD-3-Clause",
  "homepage": "https://scratux.github.io/",
  "author": {
    "name": "Joan Cipri√†",
    "email": "joancipria@gmail.com",
    "url": "https://joancipria.com"
  },
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0"
  }
}
